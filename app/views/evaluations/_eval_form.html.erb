<%= form_for [@student, @evaluation] do |form| %>
  <% if evaluation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(evaluation.errors.count, "error") %> prohibited this evaluation from being saved:</h2>

      <ul>
        <% evaluation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
<%= form.radio_button(:score, "1") %>
<%= form.label(:score, "Red") %>
<%= form.radio_button(:score, "2") %>
<%= form.label(:score, "Yellow") %>
<%= form.radio_button(:score, "3") %>
<%= form.label(:score, "Green") %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment, id: :evaluation_comment %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :evaluation_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
